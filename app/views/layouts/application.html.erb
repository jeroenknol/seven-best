<!DOCTYPE html>
<html>
  <head>
    <title>SevenBest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to root_url do %>
        <nav class="header-left">
          <li class="header-logo"><%= image_tag "http://placehold.it/50x50" %></li>
          <li class="header-name">Seven Best</li>
        </nav>
      <% end %>

      <nav class="header-right">
        <li><%= link_to "Users", "#" %></li>
        <li><%= link_to "Add picture", new_picture_path %></li>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <p>&copy; - Colin Hans Sander Jeroen</p>
    </footer>
  </body>
</html>
