<div class="form-wrapper">
<%= form_for @picture do |f| %>
  <p>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.label :caption %>
    <%= f.text_field :caption %>
  </p>

  <p>
    <%= f.label :taken_on %>
    <%= f.date_field :taken_on %>
  </p>

  <p>
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :full_name) %>
  </p>

  <p>
    <%= f.submit (@picture.new_record? ? "Create" : "Edit") %>
  </p>
<% end %>
</div>
