<h1>Users</h1>

<% if @users.empty? %>
  <p>No users found.</p>
<% else %>
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        <h2><%= user.full_name %></h2>
        <p><%= pluralize(user.pictures.count, "Picture") %></p>
        <%= link_to "View gallery", user_path(user.id) %>
      </li>
    <% end %>
  </ul>
<% end %>
